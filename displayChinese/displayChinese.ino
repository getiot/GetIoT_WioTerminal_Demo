void ShowChinese(unsigned char x, unsigned char y, unsigned int index, unsigned int color)
{
    unsigned char t, i, addr = 0;
    unsigned char w = 0;

    for (t=0; t<16; t++) {
      
        w = Words[32 * index + t];
        
        for (i=0; i<8; i++) {
            if (w & 0x80) tft.drawPixel(x+t, y+i, color);
            w = w << 1;
        }
    }
    
    y = y + 8;
    
    for (t=0; t<16; t++) {
      
        w = Words[32 * index + t + 16];
        
        for (i=0; i<8; i++) {
            if (w & 0x80) tft.drawPixel(x+t, y+i, color);
            w = w << 1;
        }
    }
}

